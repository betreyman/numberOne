/*
  文章样式
*/
.article-list{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top:1px solid teal;
  border-bottom:1px solid teal;
  padding: 5px;
}
.author{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.author image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.author-name{
  margin-left: 20rpx;
}
.author-date{
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
  border: 1px solid green;
}
.title-name{
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10px;
}
.title-img{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.title-text{
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.bottom{
  line-height: 16px;
  flex-direction: row;
  font-size: 26rpx;
}
.bottom-img{
  width: 38rpx;
  height: 38rpx;
  margin-right: 8px;
  vertical-align: middle;
}
.bottom-text{
  vertical-align: middle;
  margin-right: 20px;
}